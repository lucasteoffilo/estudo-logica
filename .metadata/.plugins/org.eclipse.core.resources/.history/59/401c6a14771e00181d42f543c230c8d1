package controller;

import util.Teclado;

public class Questao06 {

	public static void main(String[] args) {

		int num1, num2;
		num1 = Teclado.lerInt("Informe um número.");
		num2 = Teclado.lerInt("Informe outro número.");
		if (num1 > num2) {
			System.out.println(num1 - num2);
		}else {
			System.out.println(num2 - num1);
			}
	}

}
