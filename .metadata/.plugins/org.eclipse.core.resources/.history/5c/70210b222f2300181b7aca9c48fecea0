package controller;

public class Questao10B {

	public static void main(String[] args) {

		int i = 0, a = 3;

		while (i <= 15) {
			if (i == 0) {
				System.out.println("3 elevado à 0 é igual a: " + i * a);
				i = i + 1;
			} else {
				if (i == 1) {
					System.out.println("3 elevado à 1 é igual a: " + i * a);
					i = i + 1;
				} else {
					if (i == 2) {
						System.out.println("3 elevado à " + i + " é igual a: " + a * i);
						i = i++;
					} else {
						if (i == 3) {
							System.out.println("3 elevado à " + i + " é igual a: " + a * i);
							i = i++;
						} else {
							if (i == 4) {
								System.out.println("3 elevado à " + i + " é igual a: " + a * i);
								i = i++;
							} else {
								if (i == 5) {
									System.out.println("3 elevado à " + i + " é igual a: " + a * i);
									i = i++;
								} else {
									if (i == 6) {
										System.out.println("3 elevado à " + i + " é igual a: " + a * i);
										i = i++;
									} else {
										if (i == 7) {
											System.out.println("3 elevado à " + i + " é igual a: " + a * i);
											i = i++;
										} else {
											if (i == 8) {
												System.out.println("3 elevado à " + i + " é igual a: " + a * i);
												i = i++;
											} else {
												if (i == 9) {
													System.out.println("3 elevado à " + i + " é igual a: " + a * i);
													i = i++;
												} else {
													if (i == 10) {
														System.out.println("3 elevado à " + i + " é igual a: " + a * i);
														i = i++;
													} else {
														if (i == 11) {
															System.out.println(
																	"3 elevado à " + i + " é igual a: " + a * i);
															i = i++;
														} else {
															if (i == 12) {
																System.out.println(
																		"3 elevado à " + i + " é igual a: " + a * i);
																i = i++;
															} else {
																if (i == 13) {
																	System.out.println("3 elevado à " + i
																			+ " é igual a: " + a * i);
																	i = i++;
																} else {
																	if (i == 14) {
																		System.out.println("3 elevado à " + i
																				+ " é igual a: " + a * i);
																		i = i++;
																	} else {
																		if (i == 15) {
																			System.out.println("3 elevado à " + i
																					+ " é igual a: " + a * i);
																			i = i++;

																		}
																	}
																}
															}
														}
													}
												}
											}
										}
									}
								}
							}
						}

					}
				}
			}

		}
	}
}
